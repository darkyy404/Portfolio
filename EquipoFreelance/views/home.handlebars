<link rel="stylesheet" href="/public/css/home.css">

<header>
    <nav>
        <ul>
            <li><a href="/">Inicio</a></li>
            <li><a href="/miembros">Miembros</a></li>
            <li><a href="/trabajos">Trabajos</a></li>
        </ul>
    </nav>
</header>

<section class="hero">
    <div class="hero-content">
        <h1>Portfolio</h1>
        <p>Especialistas en desarrollo web, dise√±o y SEO para llevar tus proyectos al siguiente nivel.</p>
    </div>
</section>

<section class="team">
    <h2>Nuestro Equipo</h2>
    <div class="team-cards">
        {{#each miembros}}
        <div class="member-card">
            <img src="/public/images/{{this.imagen}}" alt="Foto de {{this.nombre}}" class="member-img">
            <h3>{{this.nombre}} {{this.apellidos}}</h3>
            <p>{{this.titulacion}}</p>
            
            <!-- Redes sociales -->
            <div class="social-links">
                {{#if this.linkedin}}
                <a href="{{this.linkedin}}" target="_blank" title="LinkedIn">
                    <i class="fab fa-linkedin"></i>
                </a>
                {{/if}}
                {{#if this.github}}
                <a href="{{this.github}}" target="_blank" title="GitHub">
                    <i class="fab fa-github"></i>
                </a>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
</section>


<section class="projects">
    <h2>Proyectos Realizados</h2>
    <div class="projects-cards">
        {{#each trabajos}}
        <div class="project-card">
            <div class="card-image">
                <img src="/public/images/{{this.imagen}}" alt="{{this.titulo}}">
            </div>
            <div class="card-content">
                <h3>{{this.titulo}}</h3>
                <p>{{this.descripcion}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</section>

