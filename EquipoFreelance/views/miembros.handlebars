<link rel="stylesheet" href="/public/css/miembros.css">

<h1>{{titulo}}</h1>
<div class="card-container">
    {{#each miembros}}
    <div class="card">
        <div class="card-header">
            <img src="/public/images/{{this.imagen}}" alt="Foto de {{this.nombre}}" class="profile-img">
        </div>
        <div class="card-body">
            <h2>{{this.nombre}} {{this.apellidos}}</h2>
            <h3>{{this.titulacion}}</h3>
            <p>{{this.proyectos_personales}}</p>
        </div>
        <div class="card-footer">
            <a href="{{this.contacto.github}}" target="_blank"><i class="fab fa-github"></i></a>
            <a href="{{this.contacto.linkedin}}" target="_blank"><i class="fab fa-linkedin"></i></a>
        </div>
        <div class="card-details">
            <h4>Tecnolog√≠as:</h4>
            <ul>
                {{#each this.tecnologias}}
                <li>{{this.nombre}} (Nivel: {{this.nivel}})</li>
                {{/each}}
            </ul>

            <h4>Idiomas:</h4>
            <ul>
                {{#each this.idiomas}}
                <li>{{this.nombre}} (Nivel: {{this.nivel}})</li>
                {{/each}}
            </ul>
        </div>
    </div>
    {{/each}}
</div>
