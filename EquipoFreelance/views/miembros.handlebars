<link rel="stylesheet" href="/public/css/miembros.css">

<header>
    <nav>
        <ul>
            <li><a href="/">Inicio</a></li>
            <li><a href="/miembros">Miembros</a></li>
            <li><a href="/trabajos">Trabajos</a></li>
        </ul>
    </nav>
</header>

<div class="members-header">
    <h1>Miembros del Equipo</h1>
</div>

<div class="members-grid">
    {{#each miembros}}
    <div class="member-card">
        <div class="card-image">
            <img src="/public/images/{{this.imagen}}" alt="Foto de {{this.nombre}}">
        </div>
        <div class="card-content">
            <h3>{{this.nombre}} {{this.apellidos}}</h3>
            <p><strong>Titulación:</strong> {{this.titulacion}}</p>
            <div class="details">
                <h4>Tecnologías:</h4>
                <ul>
                    {{#each this.tecnologias}}
                    <li>{{this.nombre}} (Nivel: {{this.nivel}})</li>
                    {{/each}}
                </ul>
                <h4>Idiomas:</h4>
                <ul>
                    {{#each this.idiomas}}
                    <li>{{this.nombre}} (Nivel: {{this.nivel}})</li>
                    {{/each}}
                </ul>
            </div>
            <!-- Redes sociales -->
            <div class="social-links">
                {{#if this.linkedin}}
                <a href="{{this.linkedin}}" target="_blank" title="LinkedIn">
                    <i class="fab fa-linkedin"></i>
                </a>
                {{/if}}
                {{#if this.github}}
                <a href="{{this.github}}" target="_blank" title="GitHub">
                    <i class="fab fa-github"></i>
                </a>
                {{/if}}
            </div>
        </div>
    </div>
    {{/each}}
</div>


